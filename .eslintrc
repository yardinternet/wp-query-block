{
	"root": true,
	"extends": [
		"plugin:@wordpress/eslint-plugin/recommended",
		"plugin:prettier/recommended"
	],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"requireConfigFile": false
	},
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"globals": {
		"CLI": "readonly",
		"FWP": true,
		"jQuery": "readonly",
		"wp": "readonly"
	},
	"rules": {
		"semi": [ "warn", "always" ],
		"no-unused-expressions": [ "error", { "allowTernary": true } ]
	},
	"overrides": [
		{
			"files": [ "*.{ts,tsx}" ],
			"extends": [
				"plugin:@wordpress/eslint-plugin/recommended",
				"plugin:prettier/recommended"
			],
			"env": { "browser": true }
		}
	]
}
