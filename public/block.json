{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "yard/query",
	"version": "0.1.0",
	"title": "Berichtenlijst",
	"category": "yard",
	"description": "Een geavanceerd blok waarmee berichttypen kunnen worden weergegeven op basis van verschillende zoekopdracht parameters en visuele configuraties.",
	"attributes": {
		"query": {
			"type": "object",
			"default": {
				"post_type": [],
				"posts_per_page": 3,
				"offset": 0,
				"order": "DESC",
				"orderby": "date"
			}
		},
		"enableManualSelection": {
			"type": "boolean",
			"default": false
		},
		"enableStickyPost": {
			"type": "boolean",
			"default": false
		},
		"enableExcludePosts": {
			"type": "boolean",
			"default": false
		},
		"enablePostParent": {
			"type": "boolean",
			"default": false
		},
		"postParentOption": {
			"type": "string",
			"default": "only-parents"
		},
		"enableTaxonomies": {
			"type": "boolean",
			"default": false
		},
		"template": {
			"type": "string",
			"default": "default"
		},
		"displayImage": {
			"type": "boolean",
			"default": true
		},
		"displayDate": {
			"type": "boolean",
			"default": true
		},
		"displayExcerpt": {
			"type": "boolean",
			"default": true
		},
		"displayLabel": {
			"type": "boolean",
			"default": false
		},
		"labelType": {
			"type": "string"
		},
		"align": {
			"type": "string",
			"default": "wide"
		}
	},
	"supports": {
		"html": false,
		"align": [ "wide", "full" ]
	},
	"textdomain": "yard"
}
